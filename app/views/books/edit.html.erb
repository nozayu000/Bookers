<body>
<h1>Editing Book</h1>
<form>
<!-- form_with部分 -->
<%= form_with model:@book,  local:true do |f| %>
 <!--<p id="notice"></p>-->
       <div class="field">
        <%= form_for(@book) do |f| %>
        <%= f.label :Title %><br/>
        <%= f.text_field :title %><br/>
        </div>
        <div class="field">
        <%= f.label :Body %><br/>
        <%= f.text_area :body %><br/>
        </div>
        <div class="action">
        <%= f.submit 'Update Book' %><br/>
        </div>
 <% end %>
</form>
    <%= link_to "Show", book_path(@book) %>
    |
    <%= link_to "Back", books_path(@book) %>
<% end %>
</body>